{
    "version": 2,
    "builds": [
      {
        "src": "index.ts",
        "use": "@vercel/node",
        "config":{
          "includeFiles": ["dist/**/*.js", "dist/**/*.json"]
        }
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist/client"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/dist/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/client/$1"
      }
    ]
  }
  